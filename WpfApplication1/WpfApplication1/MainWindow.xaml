            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Button Content="Next" HorizontalAlignment="Left" Height="27" Margin="60,614,0,0" VerticalAlignment="Top" Width="310" Click="Button_Click_6" Background="#FF3E3E40" Foreground="White"/>

    </Grid>
</Window>
