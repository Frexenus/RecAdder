    <Grid Background="#FF2D2D30">
        <Label Content="RecAdder" HorizontalAlignment="Left" Margin="46,20,0,0" VerticalAlignment="Top" Foreground="White" FontSize="50"/>
        <TextBox Name="name" HorizontalAlignment="Left" Height="23" Margin="60,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" Background="#FF333337" Foreground="White" BorderBrush="#FF999999" ToolTip="Название на русском" KeyUp="name_KeyUp"/>
        <TextBox Name="enName" HorizontalAlignment="Left" Height="23" Margin="212,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Background="#FF333337" Foreground="White" BorderBrush="#FF999999" KeyUp="enName_KeyUp" ToolTip="Название на анлийском вида katleti_v_souse"/>
