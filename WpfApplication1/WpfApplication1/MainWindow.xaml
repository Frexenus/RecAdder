        <TextBox Name="PathBase" HorizontalAlignment="Left" Height="23" Margin="350,18,0,0" TextWrapping="Wrap" Text="D:\Fridge\RecAdder\WpfApplication1\WpfApplication1\bin\Debug\Database.db" VerticalAlignment="Top" Width="619" Background="#FF333337" Foreground="#FF727272" BorderBrush="#FF787879" SelectionBrush="#FF69D338"/>
        <TextBox Name="PathStep" HorizontalAlignment="Left" Height="23" Margin="350,46,0,0" TextWrapping="Wrap" Text="D:\Fridge\RecAdder\WpfApplication1\WpfApplication1\bin\Debug\steps.xml" VerticalAlignment="Top" Width="619" Background="#FF333337" Foreground="#FF6C6C6C" BorderBrush="#FF787879"/>
        <TextBox Name="PathIngs" HorizontalAlignment="Left" Height="23" Margin="350,77,0,0" TextWrapping="Wrap" Text="D:\Fridge\RecAdder\WpfApplication1\WpfApplication1\bin\Debug\number_of_ingridients_for_recipes.xml" VerticalAlignment="Top" Width="619" Background="#FF333337" Foreground="#FF7C7C7C" BorderBrush="#FF79797A"/>
        <Label Content="Step:" HorizontalAlignment="Left" Margin="304,46,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Ings:" HorizontalAlignment="Left" Margin="304,77,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Base:" HorizontalAlignment="Left" Margin="304,17,0,0" VerticalAlignment="Top" Foreground="White"/>
        <ProgressBar x:Name="SQLProcess" HorizontalAlignment="Left" Height="20" Margin="60,589,0,0" VerticalAlignment="Top" Width="147" Background="{x:Null}" RenderTransformOrigin="0.5,0.5" BorderBrush="{x:Null}">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <SkewTransform/>
